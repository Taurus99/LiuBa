<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_login_head"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_centerInParent="true"
        android:src="@mipmap/liuba_icon" />

    <EditText
        android:id="@+id/edt_login_user_name"
        style="@style/itemEditTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_login_head"
        android:layout_centerHorizontal="true"
        android:width="20dp"
        android:hint="姓名"
        android:minWidth="150dp"
        android:layout_marginBottom="@dimen/item_padding_vertical"
        android:textSize="@dimen/default_font_size" />

    <EditText
        android:id="@+id/edt_login_user_phone"
        style="@style/itemEditTextStyle"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_login_user_name"
        android:layout_centerHorizontal="true"
        android:width="20dp"
        android:hint="手机号"
        android:minWidth="150dp"
        android:textSize="@dimen/default_font_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/edt_login_user_phone"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/btn_login_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            style="@style/button4CornerStyle"
            android:text="登录" />
        <Space
            android:layout_width="@dimen/item_padding_vertical"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/btn_login_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            style="@style/button4CornerStyle"
            android:text="注册" />
    </LinearLayout>

</RelativeLayout>
